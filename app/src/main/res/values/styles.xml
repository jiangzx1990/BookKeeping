<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="TollBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="titleTextColor">@color/colorWhite</item>
        <item name="subtitleTextColor">@color/color_eee</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CommonDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/color_333</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="EditStyle" parent="TextStyle">
        <item name="android:textColorHint">@color/color_666</item>
    </style>

    <style name="Loading" parent="CommonDialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
